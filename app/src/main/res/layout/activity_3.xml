        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.739" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="249dp"
        android:layout_height="59dp"
        android:layout_marginEnd="32dp"
